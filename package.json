{
    "name": "vuera-ts",
    "version": "1.0.6",
    "description": "Vuera lib migrated to TS",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nmpribeiro/vuera-ts.git"
    },
    "keywords": [
        "npm",
        "javascript",
        "typescript",
        "esm",
        "cjs",
        "nodejs",
        "commonjs",
        "ecmascript",
        "react",
        "vue",
        "react in vue",
        "vue in react"
    ],
    "author": "nmpribeiro",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nmpribeiro/vuera-ts/issues"
    },
    "homepage": "https://github.com/nmpribeiro/vuera-ts#readme",
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "vue": ">= 2.6"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "eslint": "^8.36.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.7",
        "ts-jest": "^29.0.5",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9",
        "uuid": "^9.0.0",
        "vue": "2.5"
    }
}
